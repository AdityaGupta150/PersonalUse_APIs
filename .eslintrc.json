{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "arrow-parens": [
            "warn",
            "as-needed",
            {
                "requireForBlockBody": true
            }
        ],
        "arrow-spacing": "warn",
        "eqeqeq":"warn",
        "no-use-before-define":"error",
        "no-undefined": "error",
        "object-shorthand": "error",
        "complexity": ["warn", { "max": 10 }],
        "new-cap":"off",
        "camelcase": "off",
        "curly": ["warn", "multi-or-nest"],
        "no-console": "off",
        "no-unused-vars" : "warn",
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}
